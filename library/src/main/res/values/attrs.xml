<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="PagerStatusView">
        <attr name="empty_layoutId" format="reference" />
        <attr name="error_layoutId" format="reference" />
        <attr name="loading_layoutId" format="reference" />

        <attr name="status" format="enum">
            <enum name="loading" value="1" />
            <enum name="empty" value="2" />
            <enum name="error" value="3" />
        </attr>
    </declare-styleable>


</resources>